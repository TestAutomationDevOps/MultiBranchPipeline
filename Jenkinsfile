pipeline
{
	agent any
    
    	stages
    	{
        	stage('Build')
        	{
              		steps
              		{
                  		echo "Build is Successful"
              		}
        	}

		stage('Deploy')
		{
			steps
			{              
                  		echo "Deployment is Successful"
              		}
        	}
		
		stage('Test')
		{
			steps
			{               
                  		echo "Test is Successful"
              		}
        	}
		
		stage('Release')
		{
			steps
			{      
                  		echo "Release is Successful"
            		}
        	}
    	}
}
